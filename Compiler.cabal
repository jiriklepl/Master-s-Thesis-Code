description:         TODO: add description
homepage:            https://github.com/jiriklepl/masters-thesis-code
bug-reports:         https://github.com/jiriklepl/masters-thesis-code/issues
license:             NONE
author:              Jiří Klepl
maintainer:          jiriklepl@seznam.cz
category:            Development
extra-source-files:  CHANGELOG.md

source-repository head
  type:                git
  location:            https://github.com/jiriklepl/masters-thesis-code

common common-options
  default-extensions:  ConstraintKinds
                       DeriveDataTypeable
                       DeriveTraversable
                       FlexibleContexts
                       FlexibleInstances
                       FunctionalDependencies
                       GADTSyntax
                       KindSignatures
                       LambdaCase
                       NamedFieldPuns
                       ImplicitPrelude
                       OverloadedStrings
                       ScopedTypeVariables
                       StandaloneDeriving
                       TupleSections
                       TypeFamilies
                       TypeOperators
  default-language:    Haskell2010
  ghc-options:         -Wall
                       -Wcompat
                       -Wextra
                       -Wcpp-undef
                       -Widentities
                       -Wno-implicit-prelude
                       -Wmissing-import-lists
                       -Wredundant-constraints
                       -Wsafe
                       -Wunused-packages
  cpp-options:         -DUSE_GHC_STACK
                       -DFACT_COMMENTS
  build-depends:       base >= 4.13 && < 4.17,
                       containers ^>=0.6.4.1,
                       extra ^>=1.7.10,
                       lens >=5.0.1 && <5.2,
                       megaparsec ^>=9.0.1,
                       prettyprinter ^>=1.7.1,
                       text ^>=1.2.4.0

